<div class="p-4">
    <div class="p-4 mt-6 bg-white rounded-lg dark:bg-gray-800">
      <h1 class="text-xl font-bold mb-4 text-gray-900 dark:text-white"><%= title %></h1>
      <form action="<%= formAction %>" method="POST" class="space-y-4">
        <input type="text" name="nama" placeholder="Nama" value="<%= data?.nama || '' %>" class="input input-bordered w-full" required />
        <input type="text" name="nip" placeholder="NIP" value="<%= data?.nip || '' %>" class="input input-bordered w-full" required />
        <input type="text" name="fakultas" placeholder="Fakultas" value="<%= data?.fakultas || '' %>" class="input input-bordered w-full" required />
        <button type="submit" class="btn btn-primary">Simpan</button>
      </form>
    </div>
  </div>
  